{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noEmit": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": ".",
  },
  "include": ["index.ts", "global.d.ts"],
  "exclude": ["node_modules", "bin"]
}